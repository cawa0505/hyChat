install:
	composer self-update
	composer install -vvv
	cp .env.example .env

start:
	./bin/watch run \
	--cmd "php" --args "./bin/hyperf, start" \
	--folder "/mnt/d/www/msg_infor/app" \
	--folder "/mnt/d/www/msg_infor/config" \
	--folder "/mnt/d/www/msg_infor/resources" \
	--folder "/mnt/d/www/msg_infor/routers" \
	--delay=3 \
	--autoRestart=true